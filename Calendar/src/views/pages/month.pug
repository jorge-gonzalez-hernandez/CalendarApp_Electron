html
    head
        title Calendar App
        style
            include ../../CSS/month.css
        script(src = "../../JS/month.js")
body(onload = "init()")
    //include ../partials/header

    div#main 
        div(class="container")    
            include ../partials/nav
        div(class="container grid-col-span-3 flex")
            button(onclick="showPrevMonth()") Left
            p(id = "month-id") 
            button(onclick="showNextMonth()") Right
        div(class = "grid-container container grid-col-span-3")
            p Sunday 
            p Monday 
            p Tuesday 
            p Wednesday 
            p Thursday 
            p Friday 
            p Saturday
        div(id = "month-grid-container" class="container grid-col-span-3 calendar-container grid-container")